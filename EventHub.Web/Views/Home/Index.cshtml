@using EventHub.Web.Models.Home

@model HomeViewModel
@{
    ViewData["Title"] = "Начало";
}

<div class="hero-section text-center py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 10px;">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">
            <i class="fas fa-calendar-star"></i> Добре дошли в EventHub
        </h1>
        <p class="lead mb-4">Открийте невероятни събития, случващи се близо до вас</p>
        <div class="row justify-content-center mb-4">
            <div class="col-md-3">
                <div class="stat-card p-3">
                    <h3 class="display-6 fw-bold">@Model.TotalUpcomingEvents</h3>
                    <p class="mb-0">Предстоящи събития</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card p-3">
                    <h3 class="display-6 fw-bold">@Model.TotalCategories</h3>
                    <p class="mb-0">Категории</p>
                </div>
            </div>
        </div>
        <a asp-controller="Events" asp-action="Index" class="btn btn-light btn-lg">
            <i class="fas fa-search"></i> Разгледайте всички събития
        </a>
    </div>
</div>
<div class="section mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-star text-warning"></i> Избрани събития</h2>
        <a asp-controller="Events" asp-action="Index" class="btn btn-outline-primary">
            Вижте всички <i class="fas fa-arrow-right"></i>
        </a>
    </div>

    @if (Model.FeaturedEvents.Any())
    {
        <div class="row g-4">
            @foreach (var eventItem in Model.FeaturedEvents)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm hover-shadow">
                        @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                        {
                            <img src="@eventItem.ImageUrl" class="card-img-top" alt="@eventItem.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-calendar-day fa-3x text-white"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@eventItem.Title</h5>
                            <p class="card-text text-muted">
                                <i class="fas fa-user"></i> @eventItem.Organizer
                            </p>
                            <p class="card-text">
                                <small>@eventItem.Description.Substring(0, Math.Min(100, eventItem.Description.Length))@(eventItem.Description.Length > 100 ? "..." : "")</small>
                            </p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-info">
                                    <i class="fas fa-calendar"></i> @eventItem.Date.ToString("MMM dd, yyyy")
                                </span>
                                <span class="badge bg-success">
                                    <i class="fas fa-ticket-alt"></i> @eventItem.FormattedPrice
                                </span>
                            </div>
                            <p class="mb-2">
                                <i class="fas fa-map-marker-alt text-danger"></i>
                                <small>@eventItem.VenueName</small>
                            </p>
                            @if (eventItem.CategoryNames.Any())
                            {
                                <div class="mb-2">
                                    @foreach (var category in eventItem.CategoryNames)
                                    {
                                        <span class="badge bg-secondary me-1">@category</span>
                                    }
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-white">
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-primary w-100">
                                <i class="fas fa-info-circle"></i> Вижте детайли
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> В момента няма избрани събития. Проверете отново скоро!
        </div>
    }
</div>

@if (Model.PopularCategories.Any())
{
    <div class="section">
        <h2 class="mb-4"><i class="fas fa-tags"></i> Разгледайте по категория</h2>
        <div class="row g-3">
            @foreach (var category in Model.PopularCategories)
            {
                <div class="col-md-3 col-sm-6">
                    <a asp-controller="Events" asp-action="Index" asp-route-categoryId="@category.Id" class="text-decoration-none">
                        <div class="card category-card text-center p-3 h-100 hover-shadow">
                            <div class="card-body">
                                <h5 class="card-title">@category.Name</h5>
                                @if (category.EventCount > 0)
                                {
                                    <p class="card-text text-muted">@category.EventCount събити@(category.EventCount != 1 ? "я" : "е")</p>
                                }
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
}

@section Scripts {
    <style>
        .hover-shadow {
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .hover-shadow:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
            }

        .category-card {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border: none;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            backdrop-filter: blur(10px);
        }
    </style>
}
