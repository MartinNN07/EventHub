@using EventHub.Web.Models.Booking
@model CreateBookingViewModel

@{
    ViewData["Title"] = "Резервиране на събитие";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="mb-4">
                <a href="@Url.Action("Details", "Events", new { id = Model.EventId })" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Назад към събитието
                </a>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-gradient text-white py-3">
                    <h2 class="mb-0">
                        <i class="bi bi-ticket-perforated"></i> Резервирайте вашите билети
                    </h2>
                </div>
                <div class="card-body p-4">
                    @if (!Model.IsAvailable)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Събитието е разпродадено</strong> - Няма налични билети за това събитие.
                        </div>
                    }
                    else if (Model.IsEventPassed)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Събитието е минало</strong> - Това събитие вече е проведено.
                        </div>
                    }
                    else
                    {
                        <div class="row mb-4">
                            <div class="col-md-4">
                                @if (!string.IsNullOrEmpty(Model.EventImageUrl))
                                {
                                    <img src="@Model.EventImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.EventTitle">
                                }
                                else
                                {
                                    <div class="bg-gradient rounded shadow-sm" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-calendar-event text-white" style="font-size: 4rem;"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-md-8">
                                <h3 class="text-gradient mb-3">@Model.EventTitle</h3>
                                <p class="mb-2">
                                    <i class="bi bi-person text-primary"></i>
                                    <strong>Организатор:</strong> @Model.EventOrganizer
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-calendar3 text-primary"></i>
                                    <strong>Дата:</strong> @Model.EventDate.ToString("dddd, MMMM dd, yyyy")
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-clock text-primary"></i>
                                    <strong>Час:</strong> @Model.EventDate.ToString("h:mm tt")
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-geo-alt text-primary"></i>
                                    <strong>Място:</strong> @Model.VenueName
                                    <br>
                                    <small class="text-muted ms-4">@Model.VenueAddress</small>
                                </p>
                                <p class="mb-0">
                                    <i class="bi bi-ticket-detailed text-primary"></i>
                                    <strong>Налични билети:</strong>
                                    <span class="badge bg-success" id="availableTicketsDisplay">@Model.AvailableTickets</span>
                                </p>
                            </div>
                        </div>

                        <hr class="my-4">

                        <form asp-action="Create" method="post" id="bookingForm">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="EventId" />

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label asp-for="TicketsCount" class="form-label">
                                        <i class="bi bi-ticket"></i> Брой билети
                                    </label>
                                    <div class="input-group">
                                        <button type="button" class="btn btn-outline-secondary" id="decreaseBtn">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input asp-for="TicketsCount"
                                               class="form-control text-center"
                                               id="ticketsInput"
                                               min="1"
                                               max="@Model.AvailableTickets"
                                               data-max-tickets="@Model.AvailableTickets"
                                               data-event-id="@Model.EventId" />
                                        <button type="button" class="btn btn-outline-secondary" id="increaseBtn">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="TicketsCount" class="text-danger"></span>
                                    <small class="form-text text-muted">Максимум 20 билета на резервация</small>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Цена на билет</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="bi bi-currency-euro"></i>
                                        </span>
                                        <input type="text" class="form-control" value="@Model.TicketPrice.ToString("N2")" readonly>
                                        <span class="input-group-text bg-light">на билет</span>
                                    </div>
                                </div>
                            </div>

                            <div class="card bg-light mb-4">
                                <div class="card-body">
                                    <h5 class="mb-3">Обобщение на поръчката</h5>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Билети (<span id="ticketCount">@Model.TicketsCount</span>)</span>
                                        <span id="subtotal">@Model.TotalPrice.ToString("C")</span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <strong class="h5 mb-0">Общо</strong>
                                        <strong class="h5 mb-0 text-gradient" id="totalPrice">@Model.TotalPrice.ToString("C")</strong>
                                    </div>
                                </div>
                            </div>

                            <div id="availabilityAlert" class="alert alert-warning d-none">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <span id="availabilityMessage"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                    <i class="bi bi-credit-card me-2"></i>
                                    Завършете резервацията
                                </button>
                                <a href="@Url.Action("Details", "Events", new { id = Model.EventId })" class="btn btn-outline-secondary">
                                    Отказ
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ticketPrice = parseFloat('@Model.TicketPrice.ToString(System.Globalization.CultureInfo.InvariantCulture)');
            const maxTickets = @Model.AvailableTickets;

            const ticketsInput = document.getElementById('ticketsInput');
            const ticketCountDisplay = document.getElementById('ticketCount');
            const subtotalDisplay = document.getElementById('subtotal');
            const totalPriceDisplay = document.getElementById('totalPrice');

            const decreaseBtn = document.getElementById('decreaseBtn');
            const increaseBtn = document.getElementById('increaseBtn');

            function updatePrice() {
                let tickets = parseInt(ticketsInput.value) || 0;

                if (tickets < 1) tickets = 1;
                if (tickets > maxTickets) tickets = maxTickets;
                if (tickets > 20) tickets = 20;

                ticketsInput.value = tickets;

                const total = tickets * ticketPrice;

                ticketCountDisplay.textContent = tickets;
                const formattedTotal = total.toLocaleString('bg-Bg', {minimumFractionDigits: 2, maximumFractionDigits: 2}) + ' €';
                subtotalDisplay.textContent = formattedTotal;
                totalPriceDisplay.textContent = formattedTotal;
            }

            if (decreaseBtn) {
                decreaseBtn.addEventListener('click', function() {
                    let current = parseInt(ticketsInput.value) || 0;
                    if (current > 1) {
                        ticketsInput.value = current - 1;
                        updatePrice();
                    }
                });
            }

            if (increaseBtn) {
                increaseBtn.addEventListener('click', function() {
                    let current = parseInt(ticketsInput.value) || 0;
                    if (current < maxTickets && current < 20) {
                        ticketsInput.value = current + 1;
                        updatePrice();
                    }
                });
            }

            if (ticketsInput) {
                ticketsInput.addEventListener('change', updatePrice);
                ticketsInput.addEventListener('keyup', updatePrice);
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
