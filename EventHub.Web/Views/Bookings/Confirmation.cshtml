@using EventHub.Web.Models.Booking
@model BookingConfirmationViewModel

@{
    ViewData["Title"] = "Потвърждение на резервация";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="text-center mb-4 fade-in">
                <div class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                     style="width: 100px; height: 100px;">
                    <i class="bi bi-check-circle text-white" style="font-size: 4rem;"></i>
                </div>
                <h1 class="display-4 text-gradient mb-2">Резервацията е потвърдена!</h1>
                <p class="lead text-muted">Вашите билети са успешно резервирани</p>
            </div>

            <div class="card shadow-sm border-0 mb-4 fade-in" style="animation-delay: 0.2s;">
                <div class="card-header bg-gradient text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-ticket-perforated-fill"></i> Детайли на резервацията
                        </h4>
                        <span class="badge bg-light text-dark">@Model.ConfirmationNumber</span>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.EventImageUrl))
                            {
                                <img src="@Model.EventImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.EventTitle">
                            }
                            else
                            {
                                <div class="bg-gradient rounded shadow-sm" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-calendar-event text-white" style="font-size: 4rem;"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h3 class="mb-3">@Model.EventTitle</h3>

                            <div class="mb-3">
                                <p class="mb-2">
                                    <i class="bi bi-person-fill text-primary me-2"></i>
                                    <strong>Организатор:</strong> @Model.EventOrganizer
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-calendar3 text-primary me-2"></i>
                                    <strong>Дата:</strong> @Model.EventDate.ToString("dddd, MMMM dd, yyyy")
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-clock text-primary me-2"></i>
                                    <strong>Час:</strong> @Model.EventDate.ToString("h:mm tt")
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                                    <strong>Локация:</strong> @Model.VenueName
                                    <br>
                                    <small class="text-muted ms-4">@Model.VenueAddress</small>
                                </p>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="mb-3">Информация за резервацията</h5>
                            <p class="mb-2">
                                <strong>Номер за потвърждение:</strong><br>
                                <span class="badge bg-primary">@Model.ConfirmationNumber</span>
                            </p>
                            <p class="mb-2">
                                <strong>Дата на резервация:</strong><br>
                                @Model.BookingDate.ToString("MMMM dd, yyyy - h:mm tt")
                            </p>
                            <p class="mb-2">
                                <strong>Имейл:</strong><br>
                                @Model.UserEmail
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="mb-3">Обобщение на поръчката</h5>
                            <div class="bg-light p-3 rounded">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Брой билети:</span>
                                    <strong>@Model.TicketsCount</strong>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Цена на билет:</span>
                                    <strong>@((Model.TotalPrice / Model.TicketsCount).ToString("C"))</strong>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <strong class="h5 mb-0">Общо платено:</strong>
                                    <strong class="h5 mb-0 text-gradient">@Model.TotalPrice.ToString("C")</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-2">
                        <div class="col-md-4">
                            <a href="@Url.Action("Index", "Bookings")" class="btn btn-primary w-100">
                                <i class="bi bi-ticket-perforated"></i> Моите резервации
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("Details", "Events", new { id = Model.EventId })" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-eye"></i> Детайли на събитието
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("Index", "Events")" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-search"></i> Разгледай събития
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const eventUrl = '@Url.Action("Details", "Events", new { id = Model.EventId }, Context.Request.Scheme)';
        const eventTitle = '@Model.EventTitle';

        // Print function
        function printConfirmation() {
            window.print();
        }
    </script>
}
