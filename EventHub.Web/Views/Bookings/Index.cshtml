@model EventHub.Web.Models.MyBookingsViewModel

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="display-4 text-gradient mb-3">
                <i class="bi bi-ticket-perforated"></i> My Bookings
            </h1>
            <p class="lead">Manage your event bookings and tickets</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 fade-in">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-event text-gradient" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.TotalUpcomingEvents</h3>
                    <p class="text-muted mb-0">Upcoming Events</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 fade-in" style="animation-delay: 0.1s;">
                <div class="card-body text-center">
                    <i class="bi bi-ticket-detailed text-gradient" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.TotalTicketsBooked</h3>
                    <p class="text-muted mb-0">Total Tickets</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 fade-in" style="animation-delay: 0.2s;">
                <div class="card-body text-center">
                    <i class="bi bi-receipt text-gradient" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.TotalBookings</h3>
                    <p class="text-muted mb-0">All Bookings</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 fade-in" style="animation-delay: 0.3s;">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar text-gradient" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.TotalSpent.ToString("C")</h3>
                    <p class="text-muted mb-0">Total Spent</p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.UpcomingBookings.Any())
    {
        <div class="mb-5">
            <h2 class="mb-3">
                <i class="bi bi-calendar-check"></i> Upcoming Events
            </h2>
            <div class="row">
                @foreach (var booking in Model.UpcomingBookings)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm event-card">
                            @if (!string.IsNullOrEmpty(booking.EventImageUrl))
                            {
                                <img src="@booking.EventImageUrl" class="card-img-top" alt="@booking.EventTitle" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-gradient" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-calendar-event text-white" style="font-size: 4rem;"></i>
                                </div>
                            }
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0">@booking.EventTitle</h5>
                                    <span class="badge @booking.StatusBadgeClass">@booking.StatusText</span>
                                </div>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-person"></i> @booking.EventOrganizer
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-calendar3"></i> @booking.EventDate.ToString("MMM dd, yyyy")
                                    <br>
                                    <i class="bi bi-clock"></i> @booking.EventDate.ToString("h:mm tt")
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-geo-alt"></i> @booking.VenueName
                                    <br>
                                    <small class="text-muted">@booking.VenueAddress</small>
                                </p>
                                <hr>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <small class="text-muted">Tickets</small>
                                        <h6 class="mb-0">@booking.TicketsCount</h6>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted">Total Price</small>
                                        <h6 class="mb-0 text-gradient">@booking.TotalPrice.ToString("C")</h6>
                                    </div>
                                </div>
                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("Details", "Events", new { id = booking.EventId })" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> View Event
                                    </a>
                                    @if (booking.CanCancel)
                                    {
                                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmCancel(@booking.Id, '@booking.EventTitle')">
                                            <i class="bi bi-x-circle"></i> Cancel Booking
                                        </button>
                                    }
                                </div>
                            </div>
                            <div class="card-footer bg-light">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-check"></i> Booked on @booking.BookingDate.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mb-5">
            <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No Upcoming Events</h4>
            <p>You don't have any upcoming event bookings.</p>
            <a href="@Url.Action("Index", "Events")" class="btn btn-primary">
                <i class="bi bi-search"></i> Browse Events
            </a>
        </div>
    }

    @if (Model.PastBookings.Any())
    {
        <div class="mb-5">
            <h2 class="mb-3">
                <i class="bi bi-calendar-x"></i> Past Events
            </h2>
            <div class="row">
                @foreach (var booking in Model.PastBookings)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm event-card opacity-75">
                            @if (!string.IsNullOrEmpty(booking.EventImageUrl))
                            {
                                <img src="@booking.EventImageUrl" class="card-img-top" alt="@booking.EventTitle" style="height: 200px; object-fit: cover; filter: grayscale(30%);">
                            }
                            else
                            {
                                <div class="bg-secondary" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-calendar-event text-white" style="font-size: 4rem;"></i>
                                </div>
                            }
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0">@booking.EventTitle</h5>
                                    <span class="badge @booking.StatusBadgeClass">@booking.StatusText</span>
                                </div>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-person"></i> @booking.EventOrganizer
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-calendar3"></i> @booking.EventDate.ToString("MMM dd, yyyy")
                                    <br>
                                    <i class="bi bi-clock"></i> @booking.EventDate.ToString("h:mm tt")
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-geo-alt"></i> @booking.VenueName
                                </p>
                                <hr>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <small class="text-muted">Tickets</small>
                                        <h6 class="mb-0">@booking.TicketsCount</h6>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted">Total Price</small>
                                        <h6 class="mb-0">@booking.TotalPrice.ToString("C")</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-light">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-check"></i> Booked on @booking.BookingDate.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancel Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel your booking for <strong id="eventTitle"></strong>?</p>
                <p class="text-danger">
                    <i class="bi bi-exclamation-triangle"></i> This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <form id="cancelForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Booking</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Cancel Booking
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmCancel(bookingId, eventTitle) {
            document.getElementById('eventTitle').textContent = eventTitle;
            document.getElementById('cancelForm').action = '@Url.Action("Cancel", "Bookings")/' + bookingId;
            new bootstrap.Modal(document.getElementById('cancelModal')).show();
        }
    </script>
}
