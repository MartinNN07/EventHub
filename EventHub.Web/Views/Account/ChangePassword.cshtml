@using EventHub.Web.Models.User
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Промяна на парола";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="mb-4">
                <a asp-action="Profile" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Назад към профила
                </a>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-gradient text-white py-4 text-center">
                    <h2 class="mb-0">
                        <i class="bi bi-shield-lock"></i> Промяна на парола
                    </h2>
                    <p class="mb-0 mt-2">Актуализирайте паролата на вашия акаунт</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">
                                <i class="bi bi-lock"></i> Текуща парола
                            </label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="Въведете текуща парола" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="bi bi-key"></i> Нова парола
                            </label>
                            <input asp-for="NewPassword" class="form-control" placeholder="Въведете нова парола" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Паролата трябва да бъде поне 6 символа
                            </small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="bi bi-lock-fill"></i> Потвърдете новата парола
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Въведете отново новата парола" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Промени паролата
                            </button>
                            <a asp-action="Profile" class="btn btn-outline-secondary">
                                Отказ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
