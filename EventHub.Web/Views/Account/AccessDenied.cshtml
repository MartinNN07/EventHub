@{
    ViewData["Title"] = "Access Denied";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <div class="mb-4">
                <i class="bi bi-shield-x text-danger" style="font-size: 6rem;"></i>
            </div>
            
            <h1 class="display-4 text-danger mb-3">Access Denied</h1>
            <p class="lead mb-4">
                You don't have permission to access this page.
            </p>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">What can you do?</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                                    <i class="bi bi-box-arrow-in-right"></i> Sign In
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-house"></i> Go Home
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <i class="bi bi-info-circle-fill me-2"></i>
                If you believe this is an error, please contact support.
            </div>
        </div>
    </div>
</div>
