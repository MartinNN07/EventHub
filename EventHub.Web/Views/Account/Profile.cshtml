@using EventHub.Web.Models.User
@model UserProfileViewModel

@{
    ViewData["Title"] = "Моят профил";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1 class="display-4 text-gradient mb-3">
                <i class="bi bi-person-circle"></i> Моят профил
            </h1>
            <p class="lead mb-4">Управлявайте своя профил</p>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 text-center">
                        <div class="card-body">
                            <i class="bi bi-ticket-perforated text-gradient" style="font-size: 2.5rem;"></i>
                            <h3 class="mt-2 mb-0">@Model.TotalBookings</h3>
                            <p class="text-muted mb-0">Общ брой резервации</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 text-center">
                        <div class="card-body">
                            <i class="bi bi-calendar-event text-gradient" style="font-size: 2.5rem;"></i>
                            <h3 class="mt-2 mb-0">@Model.UpcomingEvents</h3>
                            <p class="text-muted mb-0">Идващи събития</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-person-badge"></i> Лична информация
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Profile" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="TotalBookings" />
                        <input type="hidden" asp-for="UpcomingEvents" />
                        <input type="hidden" asp-for="MemberSince" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="bi bi-person"></i> Първо име
                                </label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">
                                    <i class="bi bi-person"></i> Фамилия
                                </label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> Имейл
                            </label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label">
                                <i class="bi bi-telephone"></i> Телефон (по избор)
                            </label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+1 (555) 123-4567" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Актуализирай профил
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Security Section -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-shield-lock"></i> Сигурност
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Парола</h5>
                            <p class="text-muted mb-0">Променете своята парола</p>
                        </div>
                        <a asp-action="ChangePassword" class="btn btn-outline-primary">
                            <i class="bi bi-key"></i> Промени парола
                        </a>
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-ticket-perforated-fill text-gradient" style="font-size: 3rem;"></i>
                            <h5 class="mt-3 mb-2">Моите резервации</h5>
                            <p class="text-muted mb-3">Прегледайте вашите резервации</p>
                            <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-primary">
                                Прегледайте резервации
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-event-fill text-gradient" style="font-size: 3rem;"></i>
                            <h5 class="mt-3 mb-2">Вижте събития</h5>
                            <p class="text-muted mb-3">Открийте нови събития</p>
                            <a asp-controller="Events" asp-action="Index" class="btn btn-outline-primary">
                                Вижте събития
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
