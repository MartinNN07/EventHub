@using EventHub.Web.Models.User
@model RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-gradient text-white py-4 text-center">
                    <h2 class="mb-0">
                        <i class="bi bi-person-plus-fill"></i> Създаване на акаунт
                    </h2>
                    <p class="mb-0 mt-2">Присъединете се към EventHub, за да резервирате невероятни събития</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="bi bi-person"></i> Първо име
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="Иван" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">
                                    <i class="bi bi-person"></i> Фамилия
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="Иванов" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> Имейл адрес
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="ivan.ivanov@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock"></i> Парола
                            </label>
                            <input asp-for="Password" class="form-control" placeholder="Въведете парола (минимум 6 символа)" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Паролата трябва да бъде поне 6 символа
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="bi bi-lock-fill"></i> Потвърдете паролата
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Въведете паролата отново" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">
                                    Запази ме влезнал
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-person-plus"></i> Създай акаунт
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                Вече имате акаунт?
                                <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="text-decoration-none">
                                    <strong>Влезте</strong>
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
