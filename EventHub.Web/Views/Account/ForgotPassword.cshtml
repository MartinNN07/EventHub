@model EventHub.Web.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-gradient text-white py-4 text-center">
                    <h2 class="mb-0">
                        <i class="bi bi-key"></i> Forgot Password
                    </h2>
                    <p class="mb-0 mt-2">Reset your account password</p>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        Enter your email address and we'll send you instructions to reset your password.
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> Email Address
                            </label>
                            <input asp-for="Email" 
                                   class="form-control form-control-lg" 
                                   placeholder="Enter your email"
                                   autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send"></i> Send Reset Instructions
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="Login" class="text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Back to Sign In
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Card -->
            <div class="card mt-4 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-question-circle text-primary" style="font-size: 2rem;"></i>
                    <h6 class="mt-2 mb-2">Need Help?</h6>
                    <p class="text-muted small mb-0">
                        If you don't receive an email within a few minutes, check your spam folder or contact support.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
