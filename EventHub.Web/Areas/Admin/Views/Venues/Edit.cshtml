@using EventHub.Web.Models.Venue
@model EditVenueViewModel

@{
	ViewData["Title"] = "Edit Venue";
}

<div class="container py-4">
	<div class="row justify-content-center">
		<div class="col-lg-8">
			<div class="card shadow-sm">
				<div class="card-header bg-primary text-white">
					<h4 class="mb-0">@ViewData["Title"]</h4>
				</div>
				<div class="card-body">
					<form asp-action="Edit" method="post">
						<input type="hidden" asp-for="Id" />
						<input type="hidden" asp-for="EventCount" />
						<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

						@if (Model.EventCount > 0)
						{
							<div class="alert alert-info">
								<i class="bi bi-info-circle"></i> <strong>Note:</strong> This venue has @Model.EventCount event(s). Be careful when changing capacity as it may affect existing bookings.
							</div>
						}

						<div class="mb-3">
							<label asp-for="Name" class="form-label"></label>
							<input asp-for="Name" class="form-control" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label asp-for="Address" class="form-label"></label>
							<textarea asp-for="Address" class="form-control" rows="3"></textarea>
							<span asp-validation-for="Address" class="text-danger"></span>
							<div class="form-text">Full address of the venue</div>
						</div>

						<div class="mb-3">
							<label asp-for="Capacity" class="form-label"></label>
							<input asp-for="Capacity" class="form-control" type="number" min="1" />
							<span asp-validation-for="Capacity" class="text-danger"></span>
							<div class="form-text">Maximum number of attendees the venue can accommodate</div>
						</div>

						<div class="d-flex justify-content-between mt-4">
							<a asp-action="Index" class="btn btn-secondary">
								<i class="bi bi-arrow-left"></i> Back to List
							</a>
							<button type="submit" class="btn btn-primary">
								<i class="bi bi-save"></i> Save Changes
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
