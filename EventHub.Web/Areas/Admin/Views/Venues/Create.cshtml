@model EventHub.Web.Models.CreateVenueViewModel

@{
	ViewData["Title"] = "Create Venue";
}

<div class="container py-4">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow-sm">
				<div class="card-header bg-primary text-white">
					<h4 class="mb-0">@ViewData["Title"]</h4>
				</div>
				<div class="card-body">
					<form asp-action="Create" method="post">
						<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

						<div class="mb-3">
							<label asp-for="Name" class="form-label"></label>
							<input asp-for="Name" class="form-control" placeholder="Enter venue name" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label asp-for="Address" class="form-label"></label>
							<input asp-for="Address" class="form-control" placeholder="Enter venue address" />
							<span asp-validation-for="Address" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label asp-for="Capacity" class="form-label"></label>
							<input asp-for="Capacity" class="form-control" type="number" min="1" placeholder="Enter seating capacity" />
							<span asp-validation-for="Capacity" class="text-danger"></span>
							<div class="form-text">Maximum number of people the venue can accommodate</div>
						</div>

						<div class="d-flex justify-content-between mt-4">
							<a asp-action="Index" class="btn btn-secondary">
								<i class="bi bi-arrow-left"></i> Back to List
							</a>
							<button type="submit" class="btn btn-primary">
								<i class="bi bi-save"></i> Create Venue
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
