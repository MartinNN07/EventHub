@using EventHub.Web.Models.Venue
@model VenueViewModel

@{
	ViewData["Title"] = "Delete Venue";
}

<div class="container py-4">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow-sm border-danger">
				<div class="card-header bg-danger text-white">
					<h4 class="mb-0">@ViewData["Title"]</h4>
				</div>
				<div class="card-body">
					<div class="alert alert-warning">
						<i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this venue?
					</div>

					<dl class="row">
						<dt class="col-sm-4">Name:</dt>
						<dd class="col-sm-8">@Model.Name</dd>

						<dt class="col-sm-4">Address:</dt>
						<dd class="col-sm-8">@Model.Address</dd>

						<dt class="col-sm-4">Capacity:</dt>
						<dd class="col-sm-8">@Model.Capacity seats</dd>

						<dt class="col-sm-4">Events:</dt>
						<dd class="col-sm-8">
							<span class="badge bg-info">@Model.EventCount event(s)</span>
						</dd>
					</dl>

					@if (Model.EventCount > 0)
					{
						<div class="alert alert-danger">
							<i class="bi bi-exclamation-circle"></i> <strong>Warning:</strong> This venue has @Model.EventCount associated event(s). You must remove or reassign these events before deleting this venue.
						</div>
					}

					<form asp-action="Delete" method="post">
						<input type="hidden" asp-for="Id" />
						<div class="d-flex justify-content-between mt-4">
							<a asp-action="Index" class="btn btn-secondary">
								<i class="bi bi-arrow-left"></i> Back to List
							</a>
							<button type="submit" class="btn btn-danger" @(Model.EventCount > 0 ? "disabled" : "")>
								<i class="bi bi-trash"></i> Delete Venue
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
