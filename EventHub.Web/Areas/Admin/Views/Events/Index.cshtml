@using EventHub.Web.Models.Event
@model List<AdminEventViewModel>

@{
	ViewData["Title"] = "Manage Events";
}

<div class="container py-4">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1 class="display-5">@ViewData["Title"]</h1>
		<a asp-action="Create" class="btn btn-primary">
			<i class="bi bi-plus-circle"></i> Add Event
		</a>
	</div>

	@if (Model.Any())
	{
		<div class="card shadow-sm">
			<div class="card-body p-0">
				<div class="table-responsive">
					<table class="table table-hover mb-0">
						<thead class="table-light">
							<tr>
								<th>Title</th>
								<th>Organizer</th>
								<th>Date</th>
								<th>Venue</th>
								<th>Price</th>
								<th>Categories</th>
								<th>Bookings</th>
								<th>Status</th>
								<th class="text-end">Actions</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var eventItem in Model)
							{
								<tr>
									<td class="align-middle">
										<strong>@eventItem.Title</strong>
									</td>
									<td class="align-middle">@eventItem.Organizer</td>
									<td class="align-middle">
										<small>@eventItem.FormattedDate</small>
									</td>
									<td class="align-middle">
										<i class="bi bi-geo-alt"></i> @eventItem.VenueName
									</td>
									<td class="align-middle">@eventItem.FormattedPrice</td>
									<td class="align-middle">
										@if (eventItem.CategoryNames.Any())
										{
											foreach (var category in eventItem.CategoryNames)
											{
												<span class="badge bg-secondary me-1">@category</span>
											}
										}
									</td>
									<td class="align-middle">
										<span class="badge bg-info">@eventItem.TotalBookings ticket(s)</span>
									</td>
									<td class="align-middle">
										@if (eventItem.IsPastEvent)
										{
											<span class="badge bg-secondary">Past</span>
										}
										else
										{
											<span class="badge bg-success">Upcoming</span>
										}
									</td>
									<td class="text-end align-middle">
										<div class="btn-group" role="group">
											<a asp-action="Edit" asp-route-id="@eventItem.Id" class="btn btn-sm btn-outline-primary">
												<i class="bi bi-pencil"></i> Edit
											</a>
											<a asp-action="Delete" asp-route-id="@eventItem.Id" class="btn btn-sm btn-outline-danger">
												<i class="bi bi-trash"></i> Delete
											</a>
										</div>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	}
	else
	{
		<div class="alert alert-info">
			<i class="bi bi-info-circle"></i> No events found. <a asp-action="Create" class="alert-link">Create one now</a>.
		</div>
	}
</div>
